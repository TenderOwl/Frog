using Gtk 4.0;
using Adw 1;

template $FrogWindow : Adw.ApplicationWindow {
  default-width: 480;
  default-height: 480;
  width-request: 360;
  height-request: 360;

  Box {
    orientation: vertical;

    Adw.ToastOverlay toast_overlay {
      vexpand: true;

      child: Adw.Leaflet main_leaflet {
        hexpand: true;
        can-unfold: false;
        visible-child-name: "welcome";

        Adw.LeafletPage {
          name: "welcome";

          child: $WelcomePage welcome_page {};
        }

        Adw.LeafletPage {
          name: "camera";

          child: $CameraPage camera_page {};
        }

        Adw.LeafletPage {
          name: "extracted";

          child: $ExtractedPage extracted_page {};
        }
      };
    }
  }
}
